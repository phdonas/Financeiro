
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita em qualquer documento se o usuário estiver autenticado.
    // Esta regra cobre todas as coleções: transacoes, receipts, investments, etc.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
