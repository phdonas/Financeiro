
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer usuário autenticado gerencie seus próprios dados.
    // O uso de {allPaths=**} garante que subcoleções e caminhos dinâmicos não sofram bloqueio.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
